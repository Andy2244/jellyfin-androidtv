<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="DatePickerCustom">
        <item name="android:datePickerMode">spinner</item>
    </style>

    <style name="Widget.Jellyfin.Row.Header" parent="@style/Widget.Leanback.Row.Header">
        <item name="android:textSize">@dimen/browse_header_text_size</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:height">@dimen/browse_header_height</item>
        <item name="android:minHeight">10dp</item>
        <item name="android:minWidth">1dp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:shadowRadius">3</item>
        <item name="android:shadowColor">@color/black</item>
    </style>

    <style name="Widget.Jellyfin.Row.HeaderDock" parent="@style/Widget.Leanback.Row.HeaderDock">
        <item name="android:elevation">@dimen/row_headerdock_elevation</item>
    </style>

    <style name="Widget.Jellyfin.Row.HorizontalGridView" parent="@style/Widget.Leanback.Row.HorizontalGridView">
        <item name="focusOutEnd">true</item>
    </style>

    <style name="Widget.Jellyfin.Rows.VerticalGridView" parent="@style/Widget.Leanback.Rows.VerticalGridView">
    </style>

    <style name="Widget.Jellyfin.GridItems.VerticalGridView" parent="@style/Widget.Leanback.GridItems.VerticalGridView">
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="player_progress" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_bar</item>
        <item name="android:minHeight">4dp</item>
    </style>

    <style name="overlay_progress" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_bar</item>
        <item name="android:minHeight">4dp</item>
    </style>

    <style name="card_progress_round" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_bar_card_round</item>
        <item name="android:minHeight">4dp</item>
    </style>

    <style name="card_progress" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_bar_card</item>
        <item name="android:minHeight">4dp</item>
    </style>

    <style name="card_progress_focus" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_bar_card_focus</item>
        <item name="android:minHeight">4dp</item>
    </style>

    <style name="WindowAnimation"></style>

    <style name="WindowAnimation.SlideTop">
        <item name="android:windowEnterAnimation">@anim/abc_slide_in_top</item>
        <item name="android:windowExitAnimation">@anim/abc_slide_out_top</item>
    </style>

    <style name="WindowAnimation.SlideRight">
        <item name="android:windowEnterAnimation">@anim/slide_right_in</item>
        <item name="android:windowExitAnimation">@anim/slide_right_out</item>
    </style>

    <style name="WindowAnimation.Fade">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>

    <style name="Button.Default" parent="android:Widget.Button">
        <item name="android:background">@drawable/button_default_back</item>
        <item name="android:foreground">@drawable/button_default_ripple</item>
        <item name="android:textColor">@drawable/button_default_text</item>
        <item name="drawableTint">@drawable/button_icon_tint</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="Button.TextUnder" parent="@style/Button.Icon">
        <item name="android:background">@drawable/button_default_back</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:paddingStart">2dp</item>
        <item name="android:paddingEnd">2dp</item>
        <item name="android:minHeight">8dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="Button.Icon" parent="android:Widget.Button">
        <item name="android:background">@drawable/button_icon_back</item>
        <item name="android:foreground">@drawable/button_icon_ripple</item>
        <item name="android:tint">@drawable/button_icon_tint</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:paddingStart">4dp</item>
        <item name="android:paddingEnd">4dp</item>
        <item name="android:minHeight">4dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="Button.Icon.Toolbar" parent="@style/Button.Icon">
        <item name="android:tint">@drawable/button_icon_tint_toolbar</item>
        <item name="android:tintMode">multiply</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
    </style>

    <style name="Button.Icon.Animated" parent="@style/Button.Icon">
        <item name="android:tint">@drawable/button_icon_tint_animated</item>
    </style>

    <style name="Input.Default" parent="android:Widget.EditText">
        <item name="android:background">@drawable/input_default_back</item>
        <item name="android:foreground">@drawable/input_default_ripple</item>
        <item name="android:textColor">@drawable/input_default_text</item>
        <item name="android:textColorHint">@drawable/input_default_text</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
    </style>

    <style name="PopupMenu" parent="android:Widget.Material.PopupMenu">
        <item name="android:popupBackground">@drawable/popup_menu_back</item>
        <item name="android:textColor">@color/indigo_dye</item>
    </style>

    <style name="PopupWindow" parent="android:Widget.Material.PopupWindow">
        <item name="android:popupBackground">@drawable/popup_menu_back</item>
        <item name="android:textColor">@color/indigo_dye</item>
    </style>
</resources>
